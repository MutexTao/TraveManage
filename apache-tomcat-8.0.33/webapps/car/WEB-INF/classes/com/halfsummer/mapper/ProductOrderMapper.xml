<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.halfsummer.dao.ProductOrderMapper">

    <!-- 开启二级缓存 -->
    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.halfsummer.entity.ProductOrder">
        <id column="id" property="id" />
        <result column="order_no" property="orderNo" />
        <result column="user_id" property="userId" />
        <result column="product_id" property="productId" />
        <result column="productsell_id" property="productsellId" />
        <result column="username" property="username" />
        <result column="phone" property="phone" />
        <result column="remarks" property="remarks" />
        <result column="pruduct_num" property="pruductNum" />
        <result column="payment" property="payment" />
        <result column="payment_type" property="paymentType" />
        <result column="status" property="status" />
        <result column="payment_time" property="paymentTime" />
        <result column="end_time" property="endTime" />
        <result column="close_time" property="closeTime" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="health_code_image" property="healthCodeImage" />
        <result column="stars" property="stars" />
        <result column="house_type_name" property="houseTypeName" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, order_no, user_id, product_id, productsell_id, username, phone, remarks, pruduct_num, payment, payment_type, status, payment_time, end_time, close_time, create_time, update_time,health_code_image,houseTypeName
    </sql>

    <update id="submitStars" parameterType="com.halfsummer.entity.ProductOrder">
        update product_order set stars=#{stars} where id=#{id}
    </update>
</mapper>
